{
    "app-id" : "se.sjoerd.Graphs",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "graphs",
    "finish-args" : [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	"blueprint-compiler.json",
    	"python3-numpy.json",
    	"python3-matplotlib.json",
    	"python3-scipy.json",
        {
            "name" : "graphs",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/SjoerdB93/Graphs.git",                    
                    "commit" : "a9d04179144222e92dea6602efed7ed576ae4a0c",
                    "tag" : "v1.5.1"
                }
            ],
            "config-opts" : [
		"--buildtype=release"
            ]
        }
    ]
}
